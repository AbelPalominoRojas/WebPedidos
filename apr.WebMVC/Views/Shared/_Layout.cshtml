<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - Web Pedidos</title>

    @Styles.Render("~/dist/css")
</head>
<body>
    <header class="navbar-light bg-light">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-md">
                        <a class="navbar-brand" href="/">Vue & .Net</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerMainMenu" aria-controls="navbarTogglerMainMenu" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarTogglerMainMenu">
                            <ul class="navbar-nav">
                                <li class="nav-item active">
                                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item active">
                                    @Html.ActionLink("Categoria", "Index", "Categoria", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item active">
                                    @Html.ActionLink("Producto", "Index", "Producto", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item active">
                                    @Html.ActionLink("Pedido", "Index", "Pedido", null, new { @class = "nav-link" })
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Others</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>

            </div>

        </div>
    </header>

    <div class="container pt-2 pb-5" id="app">

        @RenderBody()

    </div>

    <footer class="bg-dark text-white py-1 fixed-bottom">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <p class="text-center mb-0">&copy; @DateTime.Now.Year - Vue and .Net</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/dist/js")
    @RenderSection("scripts", required: false)

</body>
</html>
